import java.util.*;

class BankAccount{

	public String username;
	public int balance;
	public int accountNumber;
	public static String bankName;
	public double interestRate;
	public String expirationDate;
	public double monthlyFee;
	
	//default constructor
	public BankAccount(){
		username = "Anonymous";
		balance = 40200;
		accountNumber = 0;
		bankName = "Bank of Carlo";
		interestRate = 2.5;
		expirationDate = "5/07/2012";
		monthlyFee = 20;
	}
	
	//constructor
	public BankAccount( String newUsername, int newBalance, int newAccountNumber, String newBankName, double newInterestRate, String newExpirationDate, double newMonthlyFee ){
		this.username = newUsername;
		balance = newBalance;
		accountNumber = newAccountNumber;
		bankName = newBankName;
		interestRate = newInterestRate;
		expirationDate = newExpirationDate;
		monthlyFee = newMonthlyFee;
	}
	
	public void deposit(int depositAmount) {
		balance += depositAmount;
	}
	public void withdraw(int withdrawAmount) {
		balance -= withdrawAmount;
	}
	public void username(String newUsername) {
		username = newUsername;
	}
	public void bank(String newBank) {
		bankName = newBank;
	}
	public void interest(double interestChange) {
		interestRate = interestChange;
	}

}

public class project2 {

	public static void main(String[] args){

		Scanner in = new Scanner(System.in);
		
		BankAccount[] accountType = new BankAccount[3];
		accountType[0] = new BankAccount( "csavoia", 10000000, 1949, "Bank of Carlo", 1.2, "9/20/2014", 30.2);
		accountType[1] = new BankAccount( "carlopds", 32000000, 291, "Bank of Carlo", .9, "2/1/2030", 10.2);
		accountType[2] = new BankAccount( "cpds", 177000000, 29422, "Bank of Carlo", 2.3, "5/1/2016", 120);
		
		System.out.println("Which account would you like to see?\n(1) Checking Account\n(2) Savings Account\n(3) Cash Deposit Account")
			//display main info
		System.out.println("(1) Checking Account Info\nUsername: " + accountType[0].username + ", Balance: $" + accountType[0].balance + ", Account Number: " + accountType[0].accountNumber + ", Monthly Fee: $" + accountType[0].monthlyFee );
		System.out.println("(2) Savings Account Info\nUsername:  " + accountType[1].username + ", Balance: $" + accountType[1].balance + ", Account Number: " + accountType[1].accountNumber + ", Interest Rate: " + accountType[1].interestRate + "%, Monthly Fee: $" + accountType[1].monthlyFee );
		System.out.println("(3) Cash Deposit Account Info\nUsername: " + accountType[2].username + ", Balance: $" + accountType[2].balance + ", Interest Rate: " + accountType[2].interestRate + "%, Expiration Date: " + accountType[2].expirationDate + "\n");

	}
}