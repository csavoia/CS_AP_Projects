import java.io.*;
import java.util.Scanner;

public class number1 {
	public static void main(String[] args){
		Scanner in = new Scanner(System.in); 
		
		System.out.println("\nWelcome to Carlosoft Arrays 2012. Please choose an option\n");
		
		int selection = 0;
		
		while(selection == 0){
		System.out.println("1- Count forward and back\n2- User input for values\n3- Custom array size\n4- Random number array\n5- Random number array with number searching\n6- Exit\n ");
		{
			selection = in.nextInt();
			
			if(selection == 1){
				option1();
				selection = 0;
			}
			
			if(selection == 2){
				option2();
				selection = 0;
			}
			
		}
	
	}
		
}
	//Option 1
	public static void option1(){
		System.out.println("\nOption 1 chosen. Counting forward and back.\n");
		
		int[] a = new int[10];
		
		//Define table cell values
		a[0] = 1;
		a[1] = 2;
		a[2] = 3;
		a[3] = 4;
		a[4] = 5;
		a[5] = 6;
		a[6] = 7;
		a[7] = 8;
		a[8] = 9;
		a[9] = 10;
		
		for(int i=0; i < a.length; i= i+1)
		{
			System.out.println(a[i] + "\n");
		}
		
		for(int i=9; i >= 0; i= i-1)
		{
			System.out.println(a[i] + "\n");
		}
	}
	
	public static void option2(){
		Scanner in = new Scanner(System.in); 

		System.out.println("\nOption 2 chosen");
		
		int[] a = new int[10];
		
		//Asks for and accepts users values for cells
		System.out.println("\nPlease input a value for cell 1.");
		a[0] = in.nextInt();
		System.out.println("\nPlease input a value for cell 2.");
		a[1] = in.nextInt();
		System.out.println("\nPlease input a value for cell 3.");
		a[2] = in.nextInt();
		System.out.println("\nPlease input a value for cell 4.");
		a[3] = in.nextInt();
		System.out.println("\nPlease input a value for cell 5.");
		a[4] = in.nextInt();
		System.out.println("\nPlease input a value for cell 6.");
		a[5] = in.nextInt();
		System.out.println("\nPlease input a value for cell 7.");
		a[6] = in.nextInt();
		System.out.println("\nPlease input a value for cell 8.");
		a[7] = in.nextInt();
		System.out.println("\nPlease input a value for cell 9.");
		a[8] = in.nextInt();
		System.out.println("\nPlease input a value for cell 10.");
		a[9] = in.nextInt();
		
		//Print array
		for(int i=0; i < a.length; i= i+1)
		{
			System.out.println(a[i] + "\n");
		}
	}
	
}