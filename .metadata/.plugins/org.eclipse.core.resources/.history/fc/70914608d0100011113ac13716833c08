	public static void option(){
		Scanner in = new Scanner(System.in); 

		System.out.println("\n1- Play 2 - Exit");
		
		int selection = in.nextInt();
		
		if(selection == 1){
			play();
		}
		if(selection == 2){
			exit();
		}

	}
	
